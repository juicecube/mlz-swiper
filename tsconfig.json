{
  "extends": "./node_modules/@mlz/lint/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noUnusedLocals": false,
    "declaration": true,
    "allowJs": false,
    "checkJs": false,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
